pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ZobaerSayed/Comp-367-jenkins'
            }
        }
        
        stage('Build') {
            steps {
                
               sudo sh 'apt-get install maven'
                sh 'mvn package'
            }
        }
        
        stage('Run') {
            steps {
                // Start the application on port 7777
                sh 'mvn jetty:run'
                // or
                // sh 'java -jar -Dserver.port=7777 target/your-app.war'
            }
        }
    }
}
