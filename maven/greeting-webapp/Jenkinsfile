pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ZobaerSayed/Comp-367-jenkins'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Prompt user for the sudo password
                    def password = input(
                        id: 'passwordInput',
                        message: 'Enter the sudo password:',
                        parameters: [
                            [$class: 'PasswordParameterDefinition', defaultValue: '', description: '', name: 'PASSWORD']
                        ]
                    )
                    
                    // Execute the package installation command with sudo and password
                    sh "echo ${password}"
                    sh "echo ${password} | sudo -S apt-get install -y maven"
                }
                dir('/var/lib/jenkins/workspace/Maven/maven/greeting-webapp') {
                    sh 'mvn clean install'
                }
            }
        }
        
        stage('Run') {
            steps {
                // Start the application on port 7777
                sh 'mvn jetty:run'
                // or
                // sh 'java -jar -Dserver.port=7777 target/your-app.war'
            }
        }
    }
}
